source_dir="$1"

if [[ ! -e "${source_dir}" ]]
then
    echo "Usage: $0 SOURCE_DIR" >&2
    exit 1
fi

export NVM_DIR="/usr/local/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
nvm use 14.17.4 > /dev/null
node "${HOME}/work/ts-index" "${source_dir}"
